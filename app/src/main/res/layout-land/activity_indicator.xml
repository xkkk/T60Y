<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/rootView" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_gravity="center" android:id="@+id/background" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="70.0dip">
        <RadioGroup android:orientation="horizontal" android:id="@+id/radioGroup" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/redRb" android:background="@drawable/selector_indicator_style_red" android:layout_width="@dimen/indicator_btn_width" android:layout_height="@dimen/indicator_btn_height" android:checked="true" android:button="@null" />
            <RadioButton android:id="@+id/yellowRb" android:background="@drawable/selector_indicator_style_yellow" android:layout_width="@dimen/indicator_btn_width" android:layout_height="@dimen/indicator_btn_height" android:button="@null" />
            <RadioButton android:id="@+id/greenRb" android:background="@drawable/selector_indicator_style_green" android:layout_width="@dimen/indicator_btn_width" android:layout_height="@dimen/indicator_btn_height" android:button="@null" />
            <RadioButton android:id="@+id/blueRb" android:background="@drawable/selector_indicator_style_blue" android:layout_width="@dimen/indicator_btn_width" android:layout_height="@dimen/indicator_btn_height" android:button="@null" />
        </RadioGroup>
        <androidx.appcompat.widget.AppCompatTextView android:layout_gravity="center_horizontal" android:id="@+id/indicatorTips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="点击按钮选择颜色灯" style="@style/NormalTextStyle" />
    </LinearLayout>
</FrameLayout>