<resources>

    <style name="Widget.Theme.A55.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.A55.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AboutBigTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AboutNormalTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:textColor">@color/about_content_text_color</item>
    </style>

    <style name="MineRadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_bg_mine_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:checked">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FeedbackDialogTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@null</item>
    </style>
</resources>