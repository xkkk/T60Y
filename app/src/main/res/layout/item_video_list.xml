<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="270dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/margin_10"
    android:background="@drawable/bg_scene_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mCoverIv"
        android:layout_width="550dp"
        android:layout_height="212dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mTitleTv"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@drawable/assets_video_preview_8"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mCoverIv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/NormalTextStyle"
        android:layout_marginTop="@dimen/margin_10"
        tools:text="行程准备"
        />

</androidx.constraintlayout.widget.ConstraintLayout>